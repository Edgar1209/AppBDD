<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LostPets"
    android:background="@drawable/bg1">

    <ListView
        android:id="@+id/listaLost"
        android:layout_width="409dp"
        android:layout_height="500dp"
        android:layout_marginTop="64dp"
        android:layout_weight="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/holaLost"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Hola Usuario"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/perdidosLost"
        android:layout_width="65dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toEndOf="@+id/mypetsLost"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lost" />

    <ImageView
        android:id="@+id/mypetsLost"
        android:layout_width="65dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toEndOf="@+id/holaLost"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mypets" />

    <ImageView
        android:id="@+id/adopcionLost"
        android:layout_width="65dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toEndOf="@+id/perdidosLost"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/adopt" />

    <ImageView
        android:id="@+id/userLost"
        android:layout_width="65dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/adopcionLost"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user" />

</androidx.constraintlayout.widget.ConstraintLayout>