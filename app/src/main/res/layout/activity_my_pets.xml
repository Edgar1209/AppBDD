<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPets"
    android:background="@drawable/bg1">

  <Button
      android:id="@+id/addPet"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="160dp"
      android:layout_marginEnd="94dp"
      android:layout_marginBottom="168dp"
      android:text="Agregar Mascota"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <ListView
      android:id="@+id/listaMy"
      android:layout_width="409dp"
      android:layout_height="450dp"
      android:layout_marginTop="64dp"
      android:layout_weight="2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/holaMy"
      android:layout_width="150dp"
      android:layout_height="60dp"
      android:gravity="center"
      android:text="Hola Usuario"
      android:textColor="#000000"
      android:textSize="20sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/perdidosMy"
      android:layout_width="65dp"
      android:layout_height="60dp"
      app:layout_constraintStart_toEndOf="@+id/mypetsMy"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/lost" />

  <ImageView
      android:id="@+id/mypetsMy"
      android:layout_width="65dp"
      android:layout_height="60dp"
      app:layout_constraintStart_toEndOf="@+id/holaMy"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/mypets" />

  <ImageView
      android:id="@+id/adopcionMy"
      android:layout_width="65dp"
      android:layout_height="60dp"
      app:layout_constraintStart_toEndOf="@+id/perdidosMy"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/adopt" />

  <ImageView
      android:id="@+id/userMy"
      android:layout_width="65dp"
      android:layout_height="60dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/adopcionMy"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/user" />

</androidx.constraintlayout.widget.ConstraintLayout>